select * from background_information
order by Country;

select ID from background_information
where Country = 'Vietnam'
order by Age ASC;

select LastName, FirstName 
from background_information
where ID > 3
order by Income DESC;

alter table background_information
add Job varchar(255);

alter table background_information
add primary key (ID); 

select * from background_information;

delete from background_information
where Job = 'Sales';

update background_information
set ID = 100 where Job IS NOT NULL;
ALTER TABLE background_information ADD IDnew INT NOT NULL AUTO_INCREMENT PRIMARY KEY;

Delete from background_information
where Job is not null;

select min(income)
from background_information;

select max(ID)
from background_information;

select max(Income)
from background_information
where Address = 'Brooklyn';

select min(Income) as SmallestIncome
from background_information;

select count(ID)
from background_information;

select avg(Income)
from background_information;

select sum(income)
from background_information;

select avg(age)
from background_information
where ID < 9;

select Firstname, Lastname
from background_information
limit 5;

select Address
from background_information
where ID in (3,4,5,8);

select Firstname
from background_information
where ID = Null;

select * from background_information
where Income between 100 and 4000;

delete from background_information
where IDnew between 12 and 22;

select * from background_information;

