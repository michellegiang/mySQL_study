from background_information
where lastname like 't___';

select Address
from background_information
where country like '_ie%';


Create table CustomerCode (
CustomerID int,
OrderCode int);

Insert into CustomerCode (CustomerID, OrderCode)
Values (1, 11), (2, 22), (3, 33), (4, 44), (5, 55),
(6, 66), (7, 77), (8, 88), (9, 99), (10, 1010), (11, 1111);

select * from CustomerCode;

SELECT background_information.Lastname, background_information.Income, CustomerCode.OrderCode
FROM background_information
INNER JOIN CustomerCode ON background_information.IDnew=CustomerCode.CustomerID;


Alter table background_information
drop column ID;

Select * from customercode;

insert into customercode(CustomerID, OrderCode)
values (2, 23);

select * from background_information
inner join CustomerCode on background_information.IDnew=CustomerCode.CustomerID;

select * from background_information
left outer join CustomerCode on background_information.IDnew=CustomerCode.CustomerID;

